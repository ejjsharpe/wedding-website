---
import Layout from '../layouts/Layout.astro';
import RSVPForm from '../components/RSVPForm.tsx';
---

<Layout title="RSVP - Elliot & Louise Wedding" theme="secondary">
  <div class="page">
    <div class="pageHeader">
      <h1 class="pageTitle">RSVP</h1>
    </div>
    <section class="rsvpSection">
      <div class="rsvpContent">
        <RSVPForm client:load />
      </div>
    </section>
  </div>
</Layout>

<style>
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.page {
  min-height: calc(100vh - 70px);
  display: flex;
  flex-direction: column;
}

.pageHeader {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 2rem;
  text-align: center;
  animation: fadeIn 1s ease-out;
}

.pageTitle {
  font-family: var(--font-archivo);
  font-size: 2.5rem;
  font-weight: 900;
  color: var(--background);
  margin: 0;
}

.rsvpSection {
  width: 100%;
  animation: fadeIn 1s ease-out 0.2s both;
  padding-bottom: 4rem;
}

.rsvpContent {
  width: 100%;
  max-width: var(--breakpoint-lg);
  margin: 0 auto;
  padding: 0rem 2rem;
}

</style>