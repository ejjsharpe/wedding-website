---
import Layout from '../layouts/Layout.astro';
import SectionTitle from '../components/SectionTitle.astro';
import RSVPForm from '../components/RSVPForm.tsx';
---

<Layout title="RSVP - Elliot & Louise Wedding">
  <div class="page">
    <section class="rsvp-section">
      <div class="rsvp-content">
        <div class="rsvp-header">
          <SectionTitle as="h1">RSVP</SectionTitle>
          <p class="rsvp-intro">
            We're so excited to celebrate with you! Please let us know if you'll be joining us for our special day.
          </p>
          <div class="wedding-details">
            <h3>Wedding Details</h3>
            <p><strong>Date:</strong> March 20th, 2026</p>
            <p><strong>Time:</strong> 1:30 PM</p>
            <p><strong>Venue:</strong> Foxtail Barns</p>
          </div>
        </div>
        
        <div class="rsvp-form-container">
          <RSVPForm client:load />
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
.page {
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 70px);
}

.rsvp-section {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  width: 100%;
  padding: 2rem 1rem;
  padding-top: 70px;
  flex: 1;
}

.rsvp-content {
  display: flex;
  flex-direction: column;
  gap: 3rem;
  align-items: center;
  max-width: 800px;
  width: 100%;
}

.rsvp-header {
  text-align: center;
  width: 100%;
}

.rsvp-intro {
  font-size: 1.2rem;
  color: var(--primary);
  margin-bottom: 2rem;
  font-family: var(--font-elika);
  line-height: 1.6;
}

.wedding-details {
  background: var(--primary-light);
  padding: 2rem;
  border-radius: 10px;
  margin-bottom: 1rem;
}

.wedding-details h3 {
  font-size: 1.5rem;
  font-family: var(--font-elika);
  color: white;
  margin-bottom: 1rem;
  text-align: center;
}

.wedding-details p {
  font-size: 1.1rem;
  color: #000;
  margin-bottom: 0.5rem;
  text-align: center;
}

.rsvp-form-container {
  width: 100%;
  background: white;
  border-radius: 10px;
  padding: 2rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

/* Form Styles */
:global(.rsvp-form) {
  width: 100%;
}

:global(.form-group) {
  margin-bottom: 1.5rem;
}

:global(.form-group label) {
  display: block;
  font-weight: 500;
  margin-bottom: 0.5rem;
  color: var(--primary);
  font-family: var(--font-elika);
  font-size: 1rem;
}

:global(.form-input),
:global(.form-textarea) {
  width: 100%;
  padding: 0.75rem;
  border: 2px solid #e5e5e5;
  border-radius: 8px;
  font-size: 1rem;
  font-family: inherit;
  transition: border-color 0.3s ease;
}

:global(.form-input:focus),
:global(.form-textarea:focus) {
  outline: none;
  border-color: var(--primary);
}

:global(.form-textarea) {
  resize: vertical;
  min-height: 100px;
}

/* Guests Section */
:global(.guests-section) {
  border: 2px solid var(--primary-light);
  border-radius: 10px;
  padding: 1.5rem;
  margin: 1.5rem 0;
}

:global(.guests-section h3) {
  font-size: 1.3rem;
  color: var(--primary);
  font-family: var(--font-elika);
  margin-bottom: 1.5rem;
  text-align: center;
}

:global(.guest-card) {
  border: 1px solid #e5e5e5;
  border-radius: 8px;
  padding: 1.5rem;
  margin-bottom: 1rem;
  background: #fafafa;
}

:global(.guest-header) {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

:global(.guest-header h4) {
  font-size: 1.1rem;
  color: var(--primary);
  font-family: var(--font-elika);
  margin: 0;
}

:global(.remove-guest-btn) {
  background: none;
  border: none;
  color: #dc3545;
  font-size: 1.2rem;
  cursor: pointer;
  padding: 0.25rem;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

:global(.remove-guest-btn:hover) {
  background-color: rgba(220, 53, 69, 0.1);
}

:global(.radio-group) {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

:global(.radio-label) {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: normal;
  cursor: pointer;
  color: #333;
}

:global(.radio-label input[type="radio"]) {
  margin: 0;
}

:global(.add-guest-btn) {
  background: transparent;
  border: 2px dashed var(--primary);
  color: var(--primary);
  padding: 1rem;
  border-radius: 8px;
  font-size: 1rem;
  font-family: var(--font-elika);
  cursor: pointer;
  width: 100%;
  transition: all 0.3s ease;
}

:global(.add-guest-btn:hover) {
  background: var(--primary);
  color: white;
}

/* Status Messages */
:global(.status-message) {
  padding: 1rem;
  border-radius: 8px;
  margin: 1rem 0;
  font-weight: 500;
}

:global(.status-message.success) {
  background: #d4edda;
  color: #155724;
  border: 1px solid #c3e6cb;
}

:global(.status-message.error) {
  background: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
}

/* Submit Button */
:global(.submit-btn) {
  display: inline-block;
  padding: 1rem 2rem;
  background: var(--primary);
  color: white;
  text-decoration: none;
  border-radius: 50px;
  font-weight: 500;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  font-size: 1.1rem;
  font-family: var(--font-elika);
  width: 100%;
  margin-top: 1rem;
}

:global(.submit-btn:hover:not(:disabled)) {
  background: var(--primary);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px var(--shadow);
}

:global(.submit-btn:disabled) {
  background: #ccc;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

/* Responsive Design */
@media (min-width: 640px) {
  .rsvp-section {
    padding: 3rem 2rem;
  }
  
  .rsvp-intro {
    font-size: 1.3rem;
  }
  
  :global(.radio-group) {
    flex-direction: row;
    gap: 1.5rem;
  }
}

@media (min-width: 768px) {
  .rsvp-section {
    padding: 4rem 2rem;
  }
  
  .rsvp-content {
    max-width: 900px;
  }
  
  .rsvp-form-container {
    padding: 3rem;
  }
}
</style>