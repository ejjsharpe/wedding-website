---
export interface Props {
  as?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
  class?: string;
}

const { as: Tag = 'h2', class: className = '' } = Astro.props;
---

<Tag class={`section-title ${className}`}>
  <slot />
</Tag>

<style>
  .section-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--primary);
    font-family: var(--font-elika);
    margin-bottom: 2rem;
  }

  @media (min-width: 640px) {
    .section-title {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 768px) {
    .section-title {
      font-size: 2.5rem;
    }
  }
</style>